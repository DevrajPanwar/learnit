<section>
	<div class="container">
	 <!-- <div class="row row-cols-1 row-cols-md-2"> -->
	 	<div class="row">
			<% blogs.forEach(function(blog){ %>
	 		<div class="col-md-4 mb-3">
	 		     <div class="card">
				  <img src="<%= blog.img%>" class="card-img-top" alt="...">
				  <div class="card-body">
				    <h3 class="card-title"><%= blog.name%></h3>
				    <div class="card-text">
						<span>Uploaded on: <%= blog.created.toDateString() %></span>
						<p>
							
							   <a href="/blog/<%= blog._id %>">
								Read More
							   </a>
					    </p>
					 </div>
			<a href="/blog/<%= blog._id %>" class="btn btn-outline-success btn-sm">Go To Course</a>
		    <a href="#" class="btn btn-outline-danger btn-sm"><i class="fa fa-heart"></i></a>
				   </div>
			      </div>
	 		</div>
			<% }) %>

	 	</div> 	
	</div>
</section>

